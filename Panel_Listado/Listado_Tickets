SELECT 
TICKET.tn AS TICKET,
TICKET.title AS ASUNTO,
TICKET_TYPE.name AS TIPO,
CENTRO.name AS CENTRO,
QUEUE.name AS COLA,
SERVICE.name AS SERVICIO,
TICKET_PRIORITY.name AS PRIORIDAD,
TICKET_STATE.name AS ESTADO,
DATE_FORMAT(TICKET.create_time,'%d/%m/%Y %H:%ih') AS CREACIÃ“N


FROM TICKET
JOIN CENTRO ON TICKET.centro = CENTRO.id
JOIN QUEUE ON TICKET.queue_id = QUEUE.id
JOIN SERVICE ON TICKET.service_id = SERVICE.id
JOIN TICKET_PRIORITY ON TICKET.ticket_priority_id = TICKET_PRIORITY.id
JOIN TICKET_STATE ON TICKET.ticket_state_id = TICKET_STATE.id
JOIN TICKET_TYPE ON TICKET.type_id = TICKET_TYPE.id

WHERE
QUEUE.name in ($Cola) AND 
CENTRO.name in ($Centro) AND
SERVICE.name in ($Servicio) AND
TICKET_PRIORITY.name in ($Prioridad) AND
TICKET_STATE.name in ($Estado) AND
TICKET_TYPE.name in ($Tipo)
